{
  "compilerOptions": {
    "lib": ["ES6"],
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./build",
    "strict": true
  }
}
